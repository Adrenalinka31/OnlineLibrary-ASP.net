@model StudentViewModel

<h1>Создать</h1>

<hr />
<div class="row">
    <div class="col-6">

        <div class="card">
            <div class="card-header">
                <h5>Создать нового студента</h5>
            </div>
            <div class="card-body">
                <form asp-controller="HelloStudent" asp-action="CreateStudent" method="post">
                    <div class="mb-3">
                        <label class="form-label">Имя студента</label>
                        <input asp-for="Name" type="text" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Возраст студента</label>
                        <input asp-for="Age" type="number" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Сохранить</button>
                    </div>
                </form>
            </div>
            <div class="card-footer">
            </div>
        </div>

    </div>

</div>